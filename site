    <?php
        //GETTING PREVIOUS POST (RECOMMEND)
        $prev = get_previous_post();                    

        if (empty($prev)){
            $prev_post = array();

            $loop = get_posts( 'numberposts=1&order=DESC' );
            $last = (array) $loop[0];


            $prev_post['ID']             = $last['ID'];
            $prev_post['post_title']     = $last['post_title'];
            
            $s                                = strip_shortcodes(wp_trim_words( $last['post_content'], 20 ));

            $prev_post['content'] = substr($s, 0, strrpos($s, ' '));
            $prev_post['link']    = get_permalink($prev_post['ID']);
            

            //Getting attachments
            $attachments = get_posts( array(
                'offset'         => 0,
                'orderby'        => 'date',
                'order'          => 'ASC',
                'post_type'      => 'attachment',
                'numberposts'    => -1
            
            ));
            

            //Setting attachments
            if ( $attachments ) {
                foreach ( $attachments as $attachment ) {

                    $post_parent_id = $attachment->post_parent;

                    if ($post_parent_id == $prev_post['ID']){

                    $thumb = wp_get_attachment_link( $attachment->ID, 'thumbnail-size', true );

                    $prev_post['attachment'] = (array) $attachment;
                    }
                }
            }
        }
        else{
            $prev_post = array();
            $prev = (array) get_previous_post();                    
            
            $prev_post['ID']             = $prev['ID'];
            $prev_post['post_title']     = $prev['post_title'];
            
            $s                                = strip_shortcodes(wp_trim_words( $prev['post_content'], 20 ));
            
            $prev_post['content'] = substr($s, 0, strrpos($s, ' '));
            
            $prev_post['link']    = get_permalink($prev_post['ID']);
        

            //Getting attachments
            $attachments = get_posts( array(
                'offset'         => 0,
                'orderby'        => 'date',
                'order'          => 'DESC',
                'post_type'      => 'attachment',
                'numberposts'    => -1
            ));


            //Setting attachments
            if ( $attachments ) {
                foreach ( $attachments as $attachment ) {

                    $post_parent_id = $attachment->post_parent;

                    if ($post_parent_id == $prev_post['ID']){

                    $thumb = wp_get_attachment_link( $attachment->ID, 'thumbnail-size', true );

                    $prev_post['attachment'] = (array) $attachment;
                    }
                }
            }
        }
        

        //GETTING NEXT POST (RECOMMEND)
        $next = get_next_post();
        
        if (empty($next)){
            
            $loop = get_posts( 'numberposts=1&order=ASC' );
            $first = (array) $loop[0];
            
            $next_post['ID']            = $first['ID'];
            $next_post['post_title']    = $first['post_title'];

            $s                                = strip_shortcodes(wp_trim_words( $first['post_content'], 20 ));

            $next_post['content'] = substr($s, 0, strrpos($s, ' '));
            $next_post['link']    = get_permalink($next_post['ID']);
        
            //Getting attachments
            $attachments = get_posts( array(
                'offset'         => 0,
                'orderby'        => 'date',
                'order'          => 'ASC',
                'post_type'      => 'attachment',
            ));
            

            //Setting attachments
            if ( $attachments ) {
                foreach ( $attachments as $attachment ) {

                    $post_parent_id = $attachment->post_parent;

                    if ($post_parent_id == $next_post['ID']){

                    $thumb = wp_get_attachment_link( $attachment->ID, 'thumbnail-size', true );

                    $next_post['attachment'] = (array) $attachment;
                    }
                }
            }
        }
        else{
            
            $next_post = array();
            $next = (array) get_next_post();    
            
            $next_post['ID']          = $next['ID'];
            $next_post['post_title']  = $next['post_title'];

            $s                                = strip_shortcodes(wp_trim_words( $next['post_content'], 20 ));
            $next_post['content'] = substr($s, 0, strrpos($s, ' '));

            $next_post['link']    = get_permalink($next_post['ID']);
        

            //Getting attachments
            $attachments = get_posts( array(
                'offset'         => 0,
                'orderby'        => 'date',
                'order'          => 'DESC',
                'post_type'      => 'attachment',
                'numberposts'    => -1
            ));

            //Setting attachments
            if ( $attachments ) {
                foreach ( $attachments as $attachment ) {

                    $post_parent_id = $attachment->post_parent;

                    if ($post_parent_id == $next_post['ID']){

                    $thumb = wp_get_attachment_link( $attachment->ID, 'thumbnail-size', true );

                    $next_post['attachment'] = (array) $attachment;
                    }
                }
            }
        }

        //Getting post info ------------------------------------------
        $post = (array) get_post(); 
        $content = apply_filters('the_content', $post['post_content']);

        $post_link = get_permalink();
        
        //Getting attachments
        $attachments = get_posts( array(
            'offset'         => 0,
            'orderby'        => 'date',
            'order'          => 'ASC',
            'post_type'      => 'attachment',
            'numberposts'    => -1
        ));
        
        //Setting attachments
        if ( $attachments ) {
                foreach ( $attachments as $attachment ) {

                    $post_parent_id = $attachment->post_parent;

                    if ($post_parent_id == $post['ID']){

                    $thumb = wp_get_attachment_link( $attachment->ID, 'thumbnail-size', true );

                    $post['attachment'] = (array) $attachment;
                    $post['thumb']      = $thumb;                      
                    }
                }
        }

    ?>



